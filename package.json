{
  "name": "ampled",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "concurrently -k -r npm:start:client npm:start:server",
    "start:client": "cd client && npm-run-all start",
    "start:server": "rails s",
    "build-client": "cd client && npm i --only=dev && npm i && npm run build",
    "deploy": "cp -a client/build/. public/",
    "heroku-postbuild": "npm run build-client && npm run deploy"
  },
  "devDependencies": {
    "concurrently": "^3.6.1",
    "heroku": "^7.7.7",
    "husky": "1.2.1",
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": "10.13.0",
    "yarn": ">=1.12.1"
  },
  "cacheDirectories": [
    "node_modules",
    "client/node_modules"
  ]
}
